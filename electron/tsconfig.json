{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "types": ["node"]
    },
    "include": ["*.ts", "utils/**/*.ts", "services/**/*.ts"],
    "exclude": ["dist"]
  }